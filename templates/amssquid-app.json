{
    "id": "amssquid",
    "container": {
      "type": "DOCKER",
      "docker": {
        "image": "{{ams_config_squid_image}}",
        "network": "BRIDGE",
        "portMappings": [{
          "containerPort": {{ams_default_squid_port}},
          "servicePort": {{ams_default_squid_port}},
          "protocol": "tcp"
        }]
      }
    },
    "labels":{
      "HAPROXY_GROUP":"external"
    },
    "healthChecks": [
      {
        "command": {
          "value": "curl -I http://$HOST:$PORT | grep -q squid"
        },
        "protocol": "COMMAND",
        "gracePeriodSeconds": 300,
        "intervalSeconds": 60,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "delaySeconds": 15
      }
    ],
    "constraints": [
      ["hostname", "UNLIKE", "{{htcondor_config_schedd_ip}}"],
      ["hostname", "UNLIKE", "{{htcondor_config_ccb_ip}}"]
    ],
    "cmd": "/launch_squid.sh",
    "instances": 1,
    "cpus": 1.00,
    "mem": 2048
 }
